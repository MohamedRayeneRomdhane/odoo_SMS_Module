<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_part_sms">
            <field name="name">part.tunisiesms.view</field>
            <field name="model">part.tunisiesms</field>
            <field name="arch" type="xml">
            	<form string="SMS Gateway - Sens SMS" version="7.0">
	                <group string="Tunisie SMS" colspan="4" invisible="1">
	        			<field name="gateway"  readonly="1" invisible="1"/>
					</group>
					<group string="SMS" colspan="4">
                     	<group>
		                    <field name="category_id" string="Groups" widget="many2many_tags"
									       options="{'color_field': 'color', 'no_create_edit': True}" placeholder="Groups..."/>
	   				    </group>
					</group>
					<notebook>
	                    <page string="Message">
					    	<field name="text" colspan="4" nolabel="1"/>
							<field name="mobile_to" invisible="1"/>
							<field name="classes1" invisible="1"/>
							<field name="nostop1" invisible="1"/>
	                   	</page>
					</notebook>
		            <footer>
		                <button string="Send Mass SMS" name="sms_mass_send" type="object" class="oe_highlight"/>
		                or
		                <button string="Cancel" class="oe_link" special="cancel"/>
		            </footer>
	            </form>
            </field>
        </record>
        
 		<act_window name="TunisieSMS-Mass"
            res_model="part.tunisiesms" 
            binding_model="res.partner"
            view_mode="form"
            target="new"
            binding_views="form"
            id="action_part_tunisiesms" />
    </data>
</openerp>